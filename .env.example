# HexaRAG Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama deployment mode
# managed    - Use containerized Ollama with host model storage (default)
# external   - Connect to existing Ollama instance
# isolated   - Use containerized Ollama with separate model storage
OLLAMA_MODE=managed

# Path to Ollama model storage on the host system
# macOS/Linux default: ~/.ollama
# Windows default: %USERPROFILE%\.ollama
OLLAMA_MODELS_PATH=~/.ollama

# Override Ollama URL (only needed for external mode)
# OLLAMA_URL=http://localhost:11434

# Default model to use for conversations
OLLAMA_MODEL=deepseek-r1:8b

# =============================================================================
# HEXARAG APPLICATION
# =============================================================================

# Server configuration
HEXARAG_SERVER_PORT=8080
HEXARAG_SERVER_HOST=0.0.0.0

# Database configuration
HEXARAG_DATABASE_PATH=./data/hexarag.db
HEXARAG_DATABASE_MIGRATIONS_PATH=./internal/adapters/storage/sqlite/migrations

# NATS messaging configuration
HEXARAG_NATS_URL=nats://localhost:4222
HEXARAG_NATS_JETSTREAM_ENABLED=true
HEXARAG_NATS_JETSTREAM_RETENTION_DAYS=7

# LLM configuration
HEXARAG_LLM_PROVIDER=openai-compatible
HEXARAG_LLM_BASE_URL=http://localhost:11434/v1
HEXARAG_LLM_API_KEY=
HEXARAG_LLM_MODEL=deepseek-r1:8b
HEXARAG_LLM_MAX_TOKENS=4096
HEXARAG_LLM_TEMPERATURE=0.7

# Tools configuration
HEXARAG_TOOLS_MCP_TIME_SERVER_ENABLED=true

# Logging configuration
HEXARAG_LOGGING_LEVEL=info
HEXARAG_LOGGING_FORMAT=json

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================

# These variables are used by docker-compose.yml
# They are automatically set by setup scripts but can be overridden

# Docker Compose profiles to use
COMPOSE_PROFILES=full-stack

# Volume mounts
OLLAMA_DATA_PATH=ollama_data
NATS_DATA_PATH=nats_data
HEXARAG_DATA_PATH=hexarag_data